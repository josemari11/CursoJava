package poo1;

public class Coche {
	private int ruedas;
	private int largo;
	private int ancho;
	private int motor;
	private int pesoPlataforma;
	//características de cada vehiculo que pueden cambiar
	String color;
	int pesoTotal;
	boolean asientos, climatizador;
	
	//crear métodos
	public Coche(){
		ruedas=4;
		largo=2000;
		ancho=300;
		motor=1600;
		pesoPlataforma=500;
		
	}
	public String dimeLargo(){//GETTER
		
		return "el largo del coche es "+ largo;
	}
	public void estableceColor(){//SETTER
		color="azul";
	}
}//class coche